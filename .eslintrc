{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "plugins": ["react", "jest", "editorconfig"],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:cypress/recommended",
    "plugin:react/recommended",
    "plugin:editorconfig/all",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "require-atomic-updates": "off",
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": "off",
    "quotes": ["error", "single"]
  }
}
